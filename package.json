{
  "name": "helpers-patchwork",
  "description": "Helpers functions for the Patchwork functions",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "jscs": "jscs ./src/index.js",
    "eslint": "eslint ./src/index.js",
    "lint": "npm run jscs && npm run eslint",
    "test:unit": "karma start ./karma.conf.js --reporters nyan",
    "test:debug": "karma start ./karma.conf.js --single-run=false",
    "test": "npm run lint && npm run test:unit",
    "prebuild": "rm -rf dist index.*.js",
    "build": "npm-run-all --parallel 'build:*'",
    "build:main": "babel ./src -o ./index.js --ignore *.spec.js -s",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.5",
    "chai": "^3.5.0",
    "commitizen": "^2.8.2",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^5.0.0",
    "eslint-plugin-import": "^1.11.1",
    "ghooks": "^1.3.2",
    "karma": "^0.13.10",
    "karma-chrome-launcher": "^0.2.3",
    "karma-cli": "^0.1.2",
    "karma-mocha": "^0.2.0",
    "karma-nyan-reporter": "^0.2.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-spec-reporter": "0.0.20",
    "karma-webpack": "^1.7.0",
    "jscs": "^3.0.7",
    "mocha": "^2.5.3",
    "npm-run-all": "^2.3.0",
    "semantic-release": "^4.3.5",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "author": "jackson.m.santana1 <jackson.m.santana1@gmail.com>",
  "license": "ISC",
  "config": {
    "commitzen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  },
  "dependencies": {
    "data.either": "^1.4.0",
    "data.maybe": "^1.2.2",
    "ramda": "^0.21.0",
    "rx": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacksonmsantana1/Helpers.git"
  }
}
